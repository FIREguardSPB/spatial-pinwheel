# =============================================================================
# Trading Bot - Production Environment Variables
# Copy to /var/www/trading/backend/.env on server
# =============================================================================

# Application
APP_ENV=production
DEBUG=false
LOG_LEVEL=INFO

# API Server
API_HOST=127.0.0.1
API_PORT=8001

# Database (PostgreSQL)
DATABASE_URL=postgresql://trading:trading_secure_password_change_me@localhost:5432/trading_bot

# Redis
REDIS_URL=redis://localhost:6379/0

# T-Bank Invest API (получить на https://www.tbank.ru/invest/)
TINKOFF_TOKEN=your_tinkoff_token_here
TINKOFF_ACCOUNT_ID=your_account_id_here

# Security
SECRET_KEY=generate_secure_random_string_here_min_32_chars
ALLOWED_HOSTS=trading.chatpsy.online

# CORS (frontend URL)
CORS_ORIGINS=https://trading.chatpsy.online

# Worker Settings
WORKER_POLL_INTERVAL=1
WORKER_MAX_RETRIES=3
