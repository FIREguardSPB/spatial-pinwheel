# =============================================================================
# Trading Bot Environment Variables
# Copy to .env and adjust values for your environment
# =============================================================================

# --- Core ---
APP_ENV=prod
API_PORT=3000
FRONTEND_PORT=80
API_PREFIX=/api/v1
AUTH_TOKEN=
GIT_COMMIT=HEAD

# --- Database ---
POSTGRES_USER=bot
POSTGRES_PASSWORD=bot
POSTGRES_DB=botdb
POSTGRES_PORT=5432

# --- Redis ---
REDIS_PORT=6379

# --- Worker Runtime ---
TF=1m
UNIVERSE_SIZE=25
SIGNAL_INTERVAL_SECONDS=30

# --- Broker ---
BROKER_PROVIDER=mock
TBANK_TOKEN=
TBANK_ACCOUNT_ID=
TBANK_SANDBOX=false

# --- Docker Images (for CD/Production) ---
# Leave empty for local builds, set for remote registry
API_IMAGE=ghcr.io/<owner>/<repo>-api:latest
WORKER_IMAGE=ghcr.io/<owner>/<repo>-worker:latest
FRONTEND_IMAGE=ghcr.io/<owner>/<repo>-frontend:latest
